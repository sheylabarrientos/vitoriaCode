<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title_Main_Activity">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Title_Detail_Movie">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Subtitle_Detail_Movie">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Text_Detail_Movie">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Text_Category_Detail_Movie">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Text_Fragment_Detail_Movie">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Text_Title_TabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/greenPrimaryColor</item>
        <item name="tabSelectedTextColor">@color/movieTitleColor</item>
        <item name="tabTextAppearance">@style/Text_Title_TabLayout</item>
    </style>

    <style name="CustomTabLayoutCategory" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/greenPrimaryColor</item>
        <item name="tabSelectedTextColor">@color/movieTitleColor</item>
        <item name="tabTextAppearance">@style/Text_Title_TabLayout_Category</item>
    </style>

    <style name="Text_Title_TabLayout_Category" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/greenPrimaryColor</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Theme.Projeto_integrador.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>