<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Projeto_integrador.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Title_Main_Activity">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Subtitle_Detail_Movie">
        <item name="android:textColor">@color/movieDetailsTextBoldColor</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Text_Detail_Movie">
        <item name="android:textColor">@color/greenSecondaryColor</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="movieTitle">
        <item name="android:text">@string/movie_title</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/greenSecondaryColor</item>
        <item name="android:textSize">@dimen/margin_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabTextLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipColors" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_color_text</item>
    </style>

    <style name="CustomChipColors" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">45dp</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="shapeableImageStyle" parent="">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="LabelRatingCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

</resources>