<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.home.view.DetailMovieActivity">


    <ImageView
        android:id="@+id/cover_movie"
        android:layout_width="415sp"
        android:layout_height="280dp"
        android:background="@drawable/john_wick_chapter_three_ver2"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintCircleRadius="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/title_movie_detail_movie"
        style="@style/Title_Detail_Movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="56dp"
        android:text="@string/title_movie"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover_movie" />

    <ImageButton
        android:id="@+id/favorite_button_detail_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:background="@drawable/ic_baseline_favorite_border_24"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/title_movie_detail_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_movie_detail_movie"
        app:layout_constraintTop_toTopOf="@+id/title_movie_detail_movie" />


        <TextView
        android:id="@+id/year_movie"
        style="@style/Text_Detail_Movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:text="@string/year_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_button_detail_movie" />


    <TextView
        android:id="@+id/categories_details_movie"
        style="Text_Category_Detail_Movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/rectangle_4_empty"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:text="@string/acao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_movie" />

    <TextView
        android:id="@+id/categories_details_movie1"
        style="Text_Category_Detail_Movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/rectangle_4_empty"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:text="@string/biografia"
        app:layout_constraintStart_toEndOf="@+id/categories_details_movie"
        app:layout_constraintTop_toBottomOf="@+id/year_movie" />

    <TextView
        android:id="@+id/categories_details_movie2"
        style="Text_Category_Detail_Movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/rectangle_4_empty"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:text="@string/drama"
        app:layout_constraintStart_toEndOf="@+id/categories_details_movie1"
        app:layout_constraintTop_toBottomOf="@+id/year_movie" />

    <TextView
        android:id="@+id/sinopse_detail_movie"
        style="@style/Subtitle_Detail_Movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="@string/sinopse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categories_details_movie" />

    <TextView
        android:id="@+id/description_sinopse"
        style="@style/Text_Detail_Movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="@string/american_car_designer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinopse_detail_movie" />

    <TextView
        android:id="@+id/elenco_detail_movie"
        style="@style/Subtitle_Detail_Movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="@string/elenco"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_sinopse" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_actor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elenco_detail_movie"
        tools:listitem="@layout/item_image_actor" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="167dp"
        android:layout_height="90dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/rectangle_8_assessment_user"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button">

        <ImageView
            android:id="@+id/star_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_32"
            android:background="@drawable/ic_vectoric_baseline_star_24"
            android:contentDescription="@string/cover_movie" />

        <TextView
            android:id="@+id/percent_likes_detail_movies"
            style="@style/Text_Detail_Movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="@string/_81_percent" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>