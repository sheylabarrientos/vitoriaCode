<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextTelaPrincipal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:background">@color/translucent_grey</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:layout_marginStart">16dp</item>
   </style>

    <style name="RadioGroupTelaPrincipal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:onClick">onRadioButtonClicked</item>
    </style>

    <style name="BotoesTelaPrincipal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/translucent_grey</item>
        <item name="android:backgroundTint">@color/translucent_grey</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:elevation">2sp</item>
    </style>

    <style name="TextViewTelaPrincipal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/translucent_grey</item>
        <item name="android:backgroundTint">@color/translucent_grey</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Theme.App" parent="">
        ...
        <item name="colorSecondary">@color/translucent_grey</item>
        <item name="colorOnSecondary">@color/translucent_grey</item>
        <item name="colorOnSurface">@color/translucent_grey</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>


</resources>